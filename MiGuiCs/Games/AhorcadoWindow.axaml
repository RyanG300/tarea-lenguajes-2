<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="MiGuiCs.AhorcadoWindow"
        Title="ðŸŽ® Juego del Ahorcado"
        Width="600"
        Height="600"
        MinWidth="450"
        MinHeight="550">

  <!-- Layout general: 3 filas (cabecera, contenido, teclado/botones) -->
  <Grid RowDefinitions="Auto,*,Auto" Margin="0">
    <Grid.Background>
      <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#f8f9fa" Offset="0"/>
        <GradientStop Color="#e9ecef" Offset="1"/>
      </LinearGradientBrush>
    </Grid.Background>
    
    <!-- 1) Cabecera: Header mejorado con estilo moderno -->
    <Border Grid.Row="0" CornerRadius="0,0,15,15" Margin="0,0,0,8">
      <Border.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
          <GradientStop Color="#4a90e2" Offset="0"/>
          <GradientStop Color="#357abd" Offset="1"/>
        </LinearGradientBrush>
      </Border.Background>
      <Grid Name="titulosGrid" ColumnDefinitions="Auto,*,Auto" Height="65" Margin="20,10">
        <Button x:Name="ReiniciarBtn" 
                Grid.Column="0" 
                Content="ðŸ”„ Reiniciar" 
                Background="#ff6b6b" 
                Foreground="White"
                BorderBrush="Transparent"
                CornerRadius="20" 
                Padding="15,8"
                FontWeight="SemiBold"
                FontSize="14"
                Cursor="Hand">
          <Button.Styles>
            <Style Selector="Button:pointerover">
              <Setter Property="Background" Value="#ff5252"/>
              <Setter Property="RenderTransform" Value="scale(1.05)"/>
            </Style>
          </Button.Styles>
        </Button>
        
        <TextBlock x:Name="InstruccionesTextBlock" 
                   Grid.Column="1" 
                   Text="ðŸŽ¯ Adivina la palabra letra por letra" 
                   FontSize="18" 
                   FontWeight="SemiBold"
                   Foreground="White"
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center"
                   TextWrapping="Wrap"
                   Margin="20,0"/>
      </Grid>
    </Border>

    <!-- 2) Contenido: dos columnas mejoradas (izquierda: horca, derecha: palabra/estado) -->
    <Grid Grid.Row="1" ColumnDefinitions="2*,3*" Margin="15,10,15,10" VerticalAlignment="Stretch">
      
      <!-- Columna izquierda: Horca con diseÃ±o mejorado -->
      <Border Grid.Column="0" 
              CornerRadius="15" 
              Padding="15" 
              Margin="5"
              HorizontalAlignment="Center" 
              VerticalAlignment="Center"
              BoxShadow="0 4 15 0 #40000000">
        <Border.Background>
          <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#f8f9fa" Offset="1"/>
          </LinearGradientBrush>
        </Border.Background>
        
        <!-- Canvas de la horca con mismo contenido pero mejorado visualmente -->
        <Canvas x:Name="HangmanCanvas" Width="220" Height="180" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
          <!-- Horca con colores mejorados -->
          <Line StartPoint="10,150" EndPoint="150,150" Stroke="#8B4513" StrokeThickness="6"/>
          <Line StartPoint="40,150" EndPoint="40,20" Stroke="#8B4513" StrokeThickness="6"/>
          <Line StartPoint="40,20" EndPoint="110,20" Stroke="#8B4513" StrokeThickness="6"/>
          <Line StartPoint="110,20" EndPoint="110,40" Stroke="#8B4513" StrokeThickness="4"/>
          <!-- Cabeza con mejor estilo -->
          <Ellipse Canvas.Left="90" Canvas.Top="40" Width="40" Height="40" Stroke="#2c3e50" StrokeThickness="3" Fill="#ffeaa7" x:Name="Head"/>
          <!-- Cuerpo -->
          <Line StartPoint="110,80" EndPoint="110,115" Stroke="#2c3e50" StrokeThickness="4" x:Name="Body"/>
          <!-- Brazos -->
          <Line StartPoint="110,90" EndPoint="90,105" Stroke="#2c3e50" StrokeThickness="3" x:Name="LeftArm"/>
          <Line StartPoint="110,90" EndPoint="130,105" Stroke="#2c3e50" StrokeThickness="3" x:Name="RightArm"/>
          <!-- Piernas -->
          <Line StartPoint="110,115" EndPoint="95,140" Stroke="#2c3e50" StrokeThickness="3" x:Name="LeftLeg"/>
          <Line StartPoint="110,115" EndPoint="125,140" Stroke="#2c3e50" StrokeThickness="3" x:Name="RightLeg"/>
        </Canvas>
      </Border>

      <!-- Columna derecha: informaciÃ³n del juego con mejor diseÃ±o -->
      <Border Grid.Column="1" 
              CornerRadius="15" 
              Padding="20" 
              Margin="5"
              BoxShadow="0 4 15 0 #40000000">
        <Border.Background>
          <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#ffffff" Offset="0"/>
            <GradientStop Color="#f8f9fa" Offset="1"/>
          </LinearGradientBrush>
        </Border.Background>
        
        <StackPanel VerticalAlignment="Center" Spacing="15">
          <!-- Palabra con mejor estilo -->
          <Border CornerRadius="10" 
                  Padding="15" 
                  Background="#6c5ce7" 
                  HorizontalAlignment="Center">
            <TextBlock x:Name="PalabraElegida" 
                       Text="" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       Foreground="White"
                       TextWrapping="Wrap" 
                       LetterSpacing="3"/>
          </Border>
          
          <!-- EstadÃ­sticas del juego -->
          <StackPanel Spacing="8">
            <Border CornerRadius="8" 
                    Padding="12" 
                    Background="#e17055">
              <TextBlock x:Name="IntentosTextBlock" 
                         Text="" 
                         HorizontalAlignment="Center" 
                         FontSize="16" 
                         FontWeight="SemiBold"
                         Foreground="White"/>
            </Border>
            
            <Border CornerRadius="8" 
                    Padding="12" 
                    Background="#00b894">
              <TextBlock x:Name="TiempoTextBlock" 
                         Text="â±ï¸ 0:00" 
                         FontSize="16" 
                         FontWeight="SemiBold"
                         Foreground="White"
                         HorizontalAlignment="Center"/>
            </Border>
          </StackPanel>
        </StackPanel>
      </Border>
    </Grid>

    <!-- 3) Fila inferior: Teclado mejorado -->
    <Border Grid.Row="2" 
            CornerRadius="15,15,0,0" 
            Padding="20,15" 
            Margin="0,8,0,0"
            BoxShadow="0 -2 10 0 #30000000">
      <Border.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
          <GradientStop Color="#ffffff" Offset="0"/>
          <GradientStop Color="#f1f2f6" Offset="1"/>
        </LinearGradientBrush>
      </Border.Background>
      
      <!-- Panel de botones con mejor espaciado -->
      <WrapPanel x:Name="BotonesPanel" 
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center"
                 Orientation="Horizontal"/>
    </Border>

  </Grid>
</Window>