<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="MiGuiCs.AhorcadoWindow"
        Title="Ahorcado"
        Width="400"
        Height="500">
    <StackPanel Background="Azure">  
        <!-- Titulo e instrucciones -->
        <Grid Background="Orange" Name="titulosGrid" ColumnDefinitions="Auto, Auto, Auto" Height="40">
            <Button x:Name="RegresarBtn" Content="Regresar" Background="Aqua" Grid.Column="0" Margin="4,0,10,0"/>
            <TextBlock x:Name="InstruccionesTextBlock" Grid.Column="1" Text="Adivina la palabra letra por letra:" FontSize="15" Margin="0,10"/>
            <Button x:Name="ReiniciarBtn" Grid.Column="2" Content="Reiniciar" Margin="24,0,10,0" Background="Aqua"/>
            <!--<StackPanel Orientation="Horizontal" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" >
                <Button x:Name="RegresarBtn" Content="Regresar" Background="Aqua"/>
                <TextBlock x:Name="InstruccionesTextBlock" Text="Adivina la palabra letra por letra:" FontSize="16"/>
                <Button x:Name="ReiniciarBtn" Content="Reiniciar" Margin="0,0,10,0" Background="Aqua"/>
            </StackPanel>-->
        </Grid>   
        <!-- Area del juego -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10,0">
            <TextBlock x:Name="PalabraElegida" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="24" />
            <TextBlock x:Name="IntentosTextBlock" Text="" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Margin="0,90,230,0"/>
            <Canvas Grid.Column="1" x:Name="HangmanCanvas" Width="200" Height="160"
                HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,0,0"
                Background="Transparent">
                <!-- Horca -->
                <Line StartPoint="10,150" EndPoint="150,150" Stroke="Black" StrokeThickness="4"/>
                <Line StartPoint="40,150" EndPoint="40,20"   Stroke="Black" StrokeThickness="4"/>
                <Line StartPoint="40,20"  EndPoint="110,20"  Stroke="Black" StrokeThickness="4"/>
                <Line StartPoint="110,20" EndPoint="110,40"  Stroke="Black" StrokeThickness="4"/>

                <!-- Cabeza -->
                <Ellipse Canvas.Left="90" Canvas.Top="40" Width="40" Height="40"
                        Stroke="Black" StrokeThickness="3" Fill="LightGray" x:Name="Head"/>

                <!-- Cuerpo -->
                <Line StartPoint="110,80" EndPoint="110,115" Stroke="Black" StrokeThickness="3" x:Name="Body"/>

                <!-- Brazos -->
                <Line StartPoint="110,90" EndPoint="90,105"  Stroke="Black" StrokeThickness="3" x:Name="LeftArm"/>
                <Line StartPoint="110,90" EndPoint="130,105" Stroke="Black" StrokeThickness="3" x:Name="RightArm"/>

                <!-- Piernas -->
                <Line StartPoint="110,115" EndPoint="95,140"  Stroke="Black" StrokeThickness="3" x:Name="LeftLeg"/>
                <Line StartPoint="110,115" EndPoint="125,140" Stroke="Black" StrokeThickness="3" x:Name="RightLeg"/>
            </Canvas>
        </StackPanel>
            <!--<Canvas Name="gridCanvas" Background="Beige" Width="30" Height="30">
                <Rectangle Canvas.Left="10" Canvas.Top="10" Width="5" Height="5"/>
            </Canvas>-->
            <!--<StackPanel x:Name="BotonesPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20"/>-->
         
        <WrapPanel x:Name="BotonesPanel" Background="LightBlue" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </StackPanel>
    
</Window>