<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="MiGuiCs.AhorcadoWindow"
        Title="Ahorcado"
        Width="400"
        Height="500">

  <!-- Layout general: 3 filas (cabecera, contenido, teclado/botones) -->
  <Grid Background="Azure" RowDefinitions="Auto,*,Auto" Margin="6">
    
    <!-- 1) Cabecera: usé exactamente tu Grid original (mismos nombres y textos) -->
    <Grid Grid.Row="0" Background="Orange" Name="titulosGrid" ColumnDefinitions="Auto, Auto" Height="48">
      <Button x:Name="ReiniciarBtn" Grid.Column="0" Content="Reiniciar" Background="Aqua" Margin="20,0,20,0"/>
      <TextBlock x:Name="InstruccionesTextBlock" Grid.Column="1" Text="Adivina la palabra letra por letra:" FontSize="15" VerticalAlignment="Center" Margin="0,0"/>
    </Grid>

    <!-- 2) Contenido: dos columnas (izquierda: horca, derecha: palabra/estado) -->
    <Grid Grid.Row="1" ColumnDefinitions="2*,3*" Margin="8,12,8,8" VerticalAlignment="Stretch">
      
      <!-- Columna izquierda: Horca dentro de un borde para mejor aspecto -->
      <Border Grid.Column="0" CornerRadius="8" Padding="8" Background="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">
        <!-- Mantengo EXACTAMENTE tu Canvas y sus elementos (mismos nombres y coordenadas) -->
        <Canvas x:Name="HangmanCanvas" Width="220" Height="180" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Transparent">
          <!-- Horca -->
          <Line StartPoint="10,150" EndPoint="150,150" Stroke="Black" StrokeThickness="4"/>
          <Line StartPoint="40,150" EndPoint="40,20" Stroke="Black" StrokeThickness="4"/>
          <Line StartPoint="40,20" EndPoint="110,20" Stroke="Black" StrokeThickness="4"/>
          <Line StartPoint="110,20" EndPoint="110,40" Stroke="Black" StrokeThickness="4"/>
          <!-- Cabeza -->
          <Ellipse Canvas.Left="90" Canvas.Top="40" Width="40" Height="40" Stroke="Black" StrokeThickness="3" Fill="LightGray" x:Name="Head"/>
          <!-- Cuerpo -->
          <Line StartPoint="110,80" EndPoint="110,115" Stroke="Black" StrokeThickness="3" x:Name="Body"/>
          <!-- Brazos -->
          <Line StartPoint="110,90" EndPoint="90,105" Stroke="Black" StrokeThickness="3" x:Name="LeftArm"/>
          <Line StartPoint="110,90" EndPoint="130,105" Stroke="Black" StrokeThickness="3" x:Name="RightArm"/>
          <!-- Piernas -->
          <Line StartPoint="110,115" EndPoint="95,140" Stroke="Black" StrokeThickness="3" x:Name="LeftLeg"/>
          <Line StartPoint="110,115" EndPoint="125,140" Stroke="Black" StrokeThickness="3" x:Name="RightLeg"/>
        </Canvas>
      </Border>

      <!-- Columna derecha: palabra, intentos y espacio para futuros mensajes -->
      <StackPanel Grid.Column="1" Margin="12,4,8,4" VerticalAlignment="Center">
        <TextBlock x:Name="PalabraElegida" Text="" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="28" FontWeight="SemiBold" TextWrapping="Wrap" Margin="0,6"/>
        <!-- línea separadora visual -->
        <Separator Margin="0,8"/>
        <TextBlock x:Name="IntentosTextBlock" Text="" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" Margin="0,6"/>
        <!-- Espacio flexible para mensajes/estado sin romper nombres existentes -->
        <TextBlock x:Name="TiempoTextBlock" Text="0:00" FontSize="15" Opacity="0.8" Margin="0,10,0,0" />
      </StackPanel>
    </Grid>

    <!-- 3) Fila inferior: BotonesPanel sin tocar -->
    <Border Grid.Row="2" Background="Transparent" Padding="6">
      <!-- NO toqué nada dentro de este WrapPanel: mismo nombre, mismos atributos -->
      <WrapPanel x:Name="BotonesPanel" Background="LightBlue" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,6"/>
    </Border>

  </Grid>
</Window>